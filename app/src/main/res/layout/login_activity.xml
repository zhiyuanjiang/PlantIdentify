<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleplant"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/login_plant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circleplant"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="50dp">

        <ImageView
            android:id="@+id/iv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_toRightOf="@+id/iv_username"
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/iv_deletename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_userpwd"
        android:layout_below="@+id/rl_username"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="50dp">

        <ImageView
            android:id="@+id/iv_userpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pwd"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_toRightOf="@+id/iv_userpwd"
            android:id="@+id/et_userpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/iv_deletepwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"
            android:visibility="invisible"/>

    </RelativeLayout>


    <Button
        android:layout_below="@+id/rl_userpwd"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/login_btn"
        android:alpha="0.4"/>


    <TextView
        android:id="@+id/tv_register"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:text="注册"
        android:textSize="20sp"/>

</RelativeLayout>